{
  "name": "with-wasm-zig",
  "displayName": "With wasm zig",
  "version": "0.0.0",
  "description": "A basic Plasmo extension.",
  "author": "lgvic",
  "scripts": {
    "dev": "run-s build:resources dev:plasmo",
    "dev:plasmo": "plasmo dev",
    "build": "run-s build:*",
    "build:resources": "zig build --cache-dir .plasmo/zig --prefix-lib-dir resources -p .",
    "build:plasmo": "plasmo build"
  },
  "dependencies": {
    "plasmo": "canary",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@plasmohq/rps": "1.3.5",
    "@plasmohq/prettier-plugin-sort-imports": "1.2.0",
    "@types/chrome": "0.0.193",
    "@types/node": "18.6.4",
    "@types/react": "18.0.17",
    "@types/react-dom": "18.0.6",
    "prettier": "2.7.1",
    "typescript": "4.7.4"
  },
  "manifest": {
    "content_security_policy": {
      "extension_pages": "script-src 'self' 'wasm-unsafe-eval' http://localhost;object-src 'self';"
    },
    "host_permissions": [
      "https://*/*"
    ]
  }
}
