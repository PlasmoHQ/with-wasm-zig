{
  "name": "with-wasm-zig",
  "displayName": "With wasm zig",
  "version": "0.0.0",
  "description": "A basic Plasmo extension.",
  "author": "lgvic",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "build:logic": "zig build-lib src/logic/index.zig -target wasm32-freestanding -dynamic --cache-dir .plasmo/zig"
  },
  "dependencies": {
    "plasmo": "0.52.1",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@plasmohq/prettier-plugin-sort-imports": "1.2.0",
    "@types/chrome": "0.0.193",
    "@types/node": "18.6.4",
    "@types/react": "18.0.17",
    "@types/react-dom": "18.0.6",
    "prettier": "2.7.1",
    "typescript": "4.7.4"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ]
  }
}
